#!/bin/bash
###############################################################################
# Shortcut to docker-compose up. Updates configuration before running
###############################################################################
set -euo pipefail

BASE_PATH=`realpath "$(dirname $0)/.."`
. "${BASE_PATH}/bin/helpers/colors.sh"
. "${BASE_PATH}/bin/helpers/docker-compose"

${BASE_PATH}/bin/configure

section "Starting up"
${DOCKER_COMMAND} up $@
